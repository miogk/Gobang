<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/total_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.example.miogk.gobang.MyViewPager
            android:id="@+id/total_fragment_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button_home"
                style="@style/radioButton"
                android:checked="true"
                android:drawableTop="@drawable/change_home_drawable_top"
                android:text="首页"/>

            <RadioButton
                android:id="@+id/radio_button_baike"
                style="@style/radioButton"
                android:drawableTop="@drawable/change_baike_drawable_top"
                android:text="百科"/>

            <RadioButton
                android:id="@+id/radio_button_video"
                style="@style/radioButton"
                android:drawableTop="@drawable/change_video_drawable_top"
                android:text="视频"/>

            <RadioButton
                android:id="@+id/radio_button_setting"
                style="@style/radioButton"
                android:drawableTop="@drawable/change_setting_drawable_top"
                android:text="设置"/>

            <RadioButton
                android:id="@+id/radio_button_gesture"
                style="@style/radioButton"
                android:drawableTop="@drawable/change_gesture_drawable_top"
                android:text="手势"/>

            <RadioButton
                android:id="@+id/radio_button_rxjava"
                style="@style/radioButton"
                android:drawableTop="@drawable/change_gesture_drawable_top"
                android:text="RxJava"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>