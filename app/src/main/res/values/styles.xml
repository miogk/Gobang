<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="constellationKey">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/background_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffff</item>
    </style>

    <style name="constellationValue">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/background_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="radioButton">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@drawable/text_color_change</item>
    </style>

    <style name="TranslucentSystemBar" parent="@style/Theme.AppCompat.Light.NoActionBar"/>
</resources>
